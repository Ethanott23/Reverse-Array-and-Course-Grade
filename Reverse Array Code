#include <iostream>
using namespace std;

// Function to create a reversed copy of an array
int* reverseArray(const int arr[], int size) {
    int* reversedArr = new int[size]; // Dynamically allocate new array
    
    for (int i = 0; i < size; i++) {
        reversedArr[i] = arr[size - 1 - i]; // Copy elements in reverse order
    }
    
    return reversedArr; // Return pointer to new array
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);
    
    // Call function to create reversed array
    int* reversedArr = reverseArray(arr, size);
    
    // Display original array
    cout << "Original array: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    // Display reversed array
    cout << "Reversed array: ";
    for (int i = 0; i < size; i++) {
        cout << reversedArr[i] << " ";
    }
    cout << endl;
    
    // Free dynamically allocated memory
    delete[] reversedArr;
    
    return 0;
}
